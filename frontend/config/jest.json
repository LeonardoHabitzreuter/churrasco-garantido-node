{
  "bail": true,
  "verbose": true,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.story.js",
    "!src/redux-flow/reducers/index.js",
    "!src/redux-flow/reducers/**/action-creators.js",
    "!src/components/index.js",
    "!src/index.js",
    "!src/app.js",
    "!src/root.js",
    "!config/*.js"
  ],
  "roots": ["../tests"],
  "setupFiles": ["./setup-tests.js"],
  "snapshotSerializers": ["../node_modules/enzyme-to-json/serializer"],
  "moduleNameMapper": {
    "\\.(css|less)$": "../config/css-stub.js",
    "^utils(.*)$": "../src/utils$1"
  }
}
