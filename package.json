{
  "name": "churrasco-garantido-node",
  "version": "1.0.0",
  "description": "Projeto backend do churrasco garantido desenvolvido em NodeJS",
  "main": "src/index.js",
  "scripts": {
    "clear": "rm -rf dist",
    "build": "npm run clear && gulp build",
    "test": "./node_modules/.bin/mocha tests/**/*.tests.js",
    "test:coverage": "nyc npm test -- --exit",
    "test:dev": "npm test -- --watch",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepush": "npm run test:coverage",
    "start": "npm run build && pm2 start configs/appConfigs.json",
    "start:prod": "npm run start -- --env production"
  },
  "nyc": {
    "functions": 70,
    "lines": 76,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonardoHabitzreuter/churrasco-garantido-node.git"
  },
  "author": "Leonardo Habitzreuter <leonardo.h@hbsis.com.br> (https://github.com/LeonardoHabitzreuter)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeonardoHabitzreuter/churrasco-garantido-node/issues"
  },
  "homepage": "https://github.com/LeonardoHabitzreuter/churrasco-garantido-node#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-query-int": "^2.0.0",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.3",
    "node-restful": "^0.2.6",
    "pm2": "^2.9.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^7.0.1",
    "gulp-uglify": "^3.0.0",
    "mocha": "^5.0.1",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0"
  }
}
